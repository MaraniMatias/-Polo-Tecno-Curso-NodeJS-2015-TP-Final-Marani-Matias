body
  padding 15px
  font 16px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color #00B7FF

.form-signin
  max-width 330px
  padding 15px
  margin 0 auto
  .checkbox
    font-weight normal
  .form-control
    position relative
    height auto
    box-sizing border-box
    padding 6px
    font-size 16px
    &:focus
      z-index 2
  input
    margin-bottom 10px

.form-signin .form-signin-heading, .form-signin .checkbox
  margin-bottom 10px