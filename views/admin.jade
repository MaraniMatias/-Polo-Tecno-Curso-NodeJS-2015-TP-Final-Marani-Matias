extends menu
block content
  section.main-section
    .row
      .large-12.large-columns
        .row
          h1.title= title
    .row.max-width-X
      .large-6.large-centered.columns
        fieldset
          legend Please login
          .signup-panel
            .row  
              .small-12.large-centered.columns
                //p=JSON.stringify(persons)
                -if(flashmsg){
                p.text-danger  #{flashmsg}
                -};
            .row
              .small-12.large-centered.columns
                form(action='/admin', method='post')
                  .row
                    .small-12.medium-12.large-12.columns
                      label(for='email') Email address: 
                        small required
                        input(type='email', name='email', id='email', placeholder='Email address' ,required ,autofocus='')
                  .row  
                    .small-12.medium-12.large-12.columns
                      label(for='password') Password: 
                        small required
                        input(name='password', placeholder='Password', required='required', type='password')
                  .row  
                    .small-4.columns
                      button(type='submit') Login
                    .small-8.centered.columns
                      .row
                        a(href="/admin/facebook") Login with Facebook
                      .row
                        a(href="/admin/github") Login with Github