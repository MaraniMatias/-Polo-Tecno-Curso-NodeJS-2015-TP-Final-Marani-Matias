        .form-group
          label(for='name') Name:
          input.form-control(type='text', name='name', id='name', placeholder='Nombre')
      .col-md-6
        .form-group
          label(for='surname') Surname:
          input.form-control(type='text', name='surname', id='surname', placeholder='Apellido')
