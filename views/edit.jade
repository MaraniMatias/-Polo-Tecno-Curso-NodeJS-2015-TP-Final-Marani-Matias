extends menu
block content
  section.main-section
    .row
      h1.title= title
    form(name='myForm',action='',method='post',data-abide='')
      .row
        .small-12.medium-6.large-6.columns
          label(for='name') Name: 
            small required
            input#name(type='text', name='name', placeholder='Name',  pattern='alpha',required, value='#{person.name}'  )
          small.error Name is required and only letters are accepted.
        .small-12.medium-6.large-6.columns
          label(for='surname') Surname: 
            small required
            input#surname(type='text', name='surname', placeholder='Surname',pattern='alpha',required,value='#{person.surname}')
          small.error Surname is required and only letters are accepted.
    
      .row
       .small-12.medium-6.large-6.columns
          label(for='email') Email: 
            small required
            input#email(type='email', name='email', placeholder='Email',pattern='email' ,required, value='#{person.email}')
          small.error Email is required and only email are accepted.
      .row
        .small-6.columns
          .small-4.columns
            button(type='submit') Save
          .small-8.columns
            label.inline(for='right-label') Employee details: 
              a#right-label(href='#', data-reveal-id='myModal') Click to view
              //expand, xlarge, large, medium, small
              #myModal.reveal-modal.small(data-reveal='', aria-labelledby='modalTitle', aria-hidden='true', role='dialog')
                h2#modalTitle Employee details.
                -if(person.name){
                h4 Name: 
                  small.text-primary=person.name
                -}if(person.surname){
                h4.lead Surname: 
                  small.text-muted=person.surname
                -}if(person.email){
                h4.lead Email: 
                  small.text-success=person.email
                -}
                - if(user.provider){
                h4.lead Provider: 
                  small.text-success=user.provider
                -}
                h4.lead Id: 
                  small.text-info=person._id
                a.close-reveal-modal(aria-label='Close') &times;
